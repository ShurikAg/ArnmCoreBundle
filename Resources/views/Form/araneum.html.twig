{% block field_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    	<span class="help-inline">{{ errors[0].messageTemplate|trans(errors[0].messageParameters, 'validators') }}</span>
    {% endif %}
{% endspaceless %}
{% endblock field_errors %}

{% block field_row %}
{% spaceless %}
	{% set hasErrors = (errors|length > 0) %}
    <div class="control-group {% if hasErrors %}error{% endif %}">
        {{ form_label(form) }}
        <div class="controls">
			{% if attr.title is defined %}
				{% if attr.domain is defined %}
					{% set domain = attr.domain%}
				{% else %}
					{% set domain = 'messages'%}
				{% endif %}
				{% set attr = attr|merge({'title': attr.title|trans({}, domain) }) %}
			{% endif %}         	
        	{% if hasErrors %}
	        	{% set attr = attr|merge({'class': attr.class|default('') ~ ' error'}) %}
	        {% endif %}
	        {{ form_widget(form, {'attr' : attr } ) }}
	        {{ form_errors(form) }}
    	</div>
    </div>
{% endspaceless %}
{% endblock field_row %}

{% block form_label %}
{% spaceless %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% set label_attr = label_attr|merge({'class': 'control-label'}) %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}</label>
{% endspaceless %}
{% endblock form_label %}